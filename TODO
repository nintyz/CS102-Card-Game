matchButton
    for (int i = 0; i < poolCardCount; i++) {
        BorderPane borderPane = (BorderPane) cardPool.getChildren().get(i);
        borderPane.getStyleClass().remove("selected");
    }

style.css
    .image-view-wrapper {
        -fx-background-color: transparent;
    }

